<h1>Show selected list</h1>

<%= link_to "Add movies to list", new_list_bookmark_path(@list) %>

<div class="container">
  <div class="card">
    <div class="row">
      <% @movies.each do |movie| %>
        <div class="col-sm-4 border">
          <img src="https://source.unsplash.com/random" class="card-img-top" alt="list">
          <p><%= movie.title %></p>
          <p><%= movie.overview %></p>
          <p><%= movie.poster_url %></p>
          <p><%= movie.rating %></p>
          <p><%= movie.bookmarks.first.comment %></p>
          <%= link_to "Delete bookmark", bookmark_path(movie.bookmarks.first), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </div>
      <% end %>
    </div>
  </div>
</div>




<%= link_to "Go back to list overview", lists_path %>
